<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants">

    <!--<ImageView-->
        <!--android:id="@+id/item_simple_adapter_icon"-->
        <!--android:layout_width="48dp"-->
        <!--android:layout_height="48dp"-->
        <!--android:paddingLeft="10dp"-->
        <!--android:layout_gravity="center_vertical"-->
        <!--/>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#ffe5e5e5"
        android:baselineAligned="false"
        android:clickable="false"
        android:transitionGroup="false"
        android:visibility="visible">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp">

            <TextView
                android:id="@+id/item_simple_adapter_index"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:textSize="15dp"
                android:textColor="#293323"
                android:text="001"
                android:textAlignment="center"
                android:paddingTop="0dp"
                android:paddingLeft="0dp" />

            <TextView
                android:id="@+id/item_simple_adapter_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:gravity="center_vertical"
                android:text="title"
                android:paddingLeft="10dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:textColor="@color/grey"
                android:text="索书号"/>

            <TextView
                android:id="@+id/item_simple_adapter_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:paddingLeft="10dp"
                android:text="TP312"
                />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:textColor="@color/grey"
                android:text="出版社"/>
            <TextView
                android:id="@+id/item_simple_adapter_pub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:text="publication"
                android:paddingLeft="10dp"
                />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>